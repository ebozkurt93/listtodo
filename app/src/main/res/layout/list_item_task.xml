<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/list_item_task_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            android:textStyle="bold"
            tools:hint="Task Title"/>

        <TextView
            android:id="@+id/list_item_task_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="4dp"
            tools:hint="Task Description"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="right">

        <CheckBox
            android:id="@+id/list_item_task_done_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"/>

        <View
            android:id="@+id/list_item_task_priority_view"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>